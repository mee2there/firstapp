<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <item name="android:background">@drawable/app_background</item>
    </style>


    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/disabled_text</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#202020</item>
        <item name="android:typeface">monospace</item>
    </style>
    <color name="disabled_text">#9FFF</color>

    <color name="custom_theme_color">#fffffefd</color>

    <style name="CustomTheme" parent="Theme.AppCompat">
        <!--item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item-->

    </style>

    <style name="CustomFontStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/custom_theme_color</item>/>
    </style>
    <style name="CustomFontStyle.LargeFont">
        <item name="android:textSize">20pt</item>
    </style>

    <style name="CustomFontStyle.LargeFont.Blue">
        <item name="android:textColor">#ff3b52ff</item>/>
    </style>

</resources>
